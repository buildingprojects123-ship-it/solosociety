'use client'

import { useState } from 'react'
import Link from 'next/link'
import { usePathname } from 'next/navigation'
import CreatePostModal from '@/components/feed/CreatePostModal'
import WhereAtFocus from '@/components/ui/WhereAtFocus'

// Create a separate component to handle the modal state
function CreatePostButton() {
  const [isCreateModalOpen, setIsCreateModalOpen] = useState(false)

  return (
    <>
      <button
        onClick={() => setIsCreateModalOpen(true)}
        className="w-full px-4 py-3 bg-primary text-primary-foreground rounded-lg font-medium text-sm hover:bg-primary/90 transition-colors disabled:opacity-50 disabled:cursor-not-allowed shadow-lg shadow-primary/20"
      >
        create post
      </button>
      <CreatePostModal
        isOpen={isCreateModalOpen}
        onClose={() => setIsCreateModalOpen(false)}
      />
    </>
  )
}

